<!DOCTYPE html>
<html lang="en">
{{> head }}

<body>

    {{> navbar }}

    <section>
        <div class="container mt-3">
            <form action="/clientes/findByRut" method="get">
                <div class="mb-3">
                    <label for="rut" class="form-label">Ingresa el rut</label>
                    <input type="text" class="form-control" id="rut" name="rut">
                </div>
                <button type="submit" class="btn btn-primary">Buscar por rut</button>
            </form>
        </div>
    </section>

    <section>
        <div class="container mt-3">
            <p>{{respuesta.msg}}</p>
        </div>
    </section>

    <section>
        <div class="container mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Rut</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Actualizar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each respuesta.datos}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{rut}}</td>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>{{correo}}</td>
                        <td><a href="/clientes/update?rut={{rut}}"><button class="btn btn-success">Actualizar</button></a></td>
                        <td><a href="/clientes/deleteByRut?rut={{rut}}"><button class="btn btn-danger">Eliminar</button></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>